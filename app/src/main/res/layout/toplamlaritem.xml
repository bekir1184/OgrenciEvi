<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:background="@android:color/holo_blue_dark"
        android:layout_width="120dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/cardBack"
        android:layout_margin="10dp"
        android:layout_height="120dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/kategoriResmi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                 />

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kategoriResmi"
                android:id="@+id/KategoriToplam"
                android:gravity="center"
                android:text="Kira"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toplamTV"
                android:textColor="@color/grey_active"
                android:text="120 ₺"
                android:layout_below="@+id/KategoriToplam"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:background="@android:color/holo_blue_dark"
        android:layout_width="120dp"
        app:cardBackgroundColor="@color/cardBack"
        app:cardCornerRadius="12dp"
        android:layout_margin="10dp"
        android:layout_height="120dp"
        >

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/kategoriResmi2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                 />

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kategoriResmi2"
                android:id="@+id/KategoriToplam2"
                android:gravity="center"
                android:text="Kira"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/toplamTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_active"
                android:text="120 ₺"
                android:layout_below="@+id/KategoriToplam2"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>

