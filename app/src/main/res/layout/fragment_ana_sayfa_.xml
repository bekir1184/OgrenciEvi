<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Sayfalar.AnaSayfa_Frag">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lin"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/evAdiET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:text="Anasayfa"
                    android:fontFamily="@font/madelina"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="Kendi Harcamalarim"
                android:layout_margin="10dp"
                android:fontFamily="@font/madelina"
                android:id="@+id/baslik"/>
            <HorizontalScrollView
                android:id="@+id/hor"
                android:layout_below="@+id/baslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardGida"
                        android:layout_margin="10dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/color1"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/relGida1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:text="Gida"
                                    android:fontFamily="@font/madelina"
                                    android:textSize="30sp"
                                    android:layout_margin="10dp"/>
                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/burger"
                                    />



                            </RelativeLayout>
                            <TextView
                                android:id="@+id/kGida"
                                android:layout_below="@+id/relGida1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="50dp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/madelina"
                                android:text="-"
                                android:gravity="center"/>


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFatura"
                        android:layout_margin="10dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/color2"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/relFatura1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:text="Fatura"
                                    android:fontFamily="@font/madelina"
                                    android:textSize="30sp"
                                    android:layout_margin="10dp"/>
                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/bill"
                                    />



                            </RelativeLayout>
                            <TextView
                                android:id="@+id/kFatura"
                                android:layout_below="@+id/relFatura1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="50dp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/madelina"
                                android:text="-"
                                android:gravity="center"/>


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardKira"
                        android:layout_margin="10dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/color3"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/relKira1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:text="Kira"
                                    android:fontFamily="@font/madelina"
                                    android:textSize="30sp"
                                    android:layout_margin="10dp"/>
                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/house"
                                    />



                            </RelativeLayout>
                            <TextView
                                android:id="@+id/kKira"
                                android:layout_below="@+id/relKira1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="50dp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/madelina"
                                android:text="-"
                                android:gravity="center"/>


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDiger"
                        android:layout_margin="10dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/color4"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/relDiger"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:text="Diger"
                                    android:fontFamily="@font/madelina"
                                    android:textSize="30sp"
                                    android:layout_margin="10dp"/>
                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/document"
                                    />



                            </RelativeLayout>
                            <TextView
                                android:id="@+id/kDiger"
                                android:layout_below="@+id/relDiger"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="50dp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:fontFamily="@font/madelina"
                                android:text="-"
                                android:gravity="center"/>


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Toplam Harcama"
                android:layout_below="@+id/hor"
                android:id="@+id/baslik2"
                android:fontFamily="@font/madelina"
                android:layout_margin="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/baslik2"
                android:layout_margin="10dp"
                android:id="@+id/cardToplamEv"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorPrimary">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/harcamalar"
                    android:background="@android:color/transparent"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:lottie_rawRes="@raw/dusunen"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:fontFamily="@font/madelina"
                            android:text="Toplam Ev Harcamasi:"
                            android:gravity="center"
                            android:id="@+id/icBaslik"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icBaslik"
                            android:textSize="25sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:text="-"
                            android:gravity="center"
                            android:fontFamily="@font/madelina"
                            android:id="@+id/toplamHarcama"/>
                        <TextView
                            android:layout_below="@id/toplamHarcama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:fontFamily="@font/madelina"
                            android:text="Kisi Basina Dusen:"
                            android:gravity="center"
                            android:id="@+id/icBaslik2"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icBaslik2"
                            android:textSize="25sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:text="-"
                            android:gravity="center"
                            android:fontFamily="@font/madelina"
                            android:id="@+id/kisiBasi"/>






                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@+id/cardToplamEv"
                android:id="@+id/baslik3"
                android:fontFamily="@font/madelina"
                android:textSize="25sp"
                android:text="Yeni Harcama Ekle"
                android:layout_margin="10dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/baslik3"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_margin="10dp"
                android:id="@+id/cardHarcama">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/harcamaEkle"
                    android:background="@android:color/transparent"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/madelina"
                            android:textSize="30sp"
                            android:text="Harcama Eklemek icin "
                            android:layout_margin="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/madelina"
                            android:textSize="30sp"
                            android:gravity="center"
                            android:text="Tiklayiniz "
                            android:layout_margin="10dp"
                            />

                    </LinearLayout>
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/paraekle"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@+id/cardHarcama"
                android:id="@+id/baslik4"
                android:fontFamily="@font/madelina"
                android:textSize="25sp"
                android:text="Istatikler"
                android:layout_margin="10dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/baslik4"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_margin="10dp"
                android:id="@+id/cardGrafik">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/grafikAc"
                    android:background="@android:color/transparent"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:lottie_loop="true"
                        android:fitsSystemWindows="true"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/girisanim"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/madelina"
                            android:textSize="30sp"
                            android:text="Grafik icin"
                            android:layout_margin="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/madelina"
                            android:textSize="30sp"
                            android:gravity="center"
                            android:text="Tiklayiniz "
                            android:layout_margin="10dp"
                            />

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>



</FrameLayout>